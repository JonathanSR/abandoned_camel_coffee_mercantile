<h1>Cart</h1>
<div class="row">
<% @cart.contents.each do |id, quantity| %>
  <div class="col-sm-12 col-md-12">
    <div class="thumbnail">
      <img src="..." alt="...">
      <div class="caption">
        <h3><%= @bean.find(id).title %></h3><br>
        <p>Description: <%= @bean.find(id).description %></p>
        <p>Price: $<%= @bean.find(id).price %></p>
        <p> Quantity: <%= quantity %></p><br>
        <%= form_tag(cart_path(id), method: :put) do%>
          <%= text_field_tag 'update',nil, placeholder:"Enter Quantity"%>
          <%= submit_tag 'Update Cart' %>
        <% end %><br>
        <p><%= link_to "Remove", cart_path(id), method: :delete %></p>
      </div>
    </div>
  </div>
  <% end %>
</div>
<div id="total">
  <p> Total: $<%= @cart.total_price %></p>
</div>
