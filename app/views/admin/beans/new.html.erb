<div class = "container">
  <div class = "jumbotron">
    <div class = "row">
      <div class = "col-md-7"> 
        <h2 align=right> Add New Beans to Inventory</h2><br>
          <div class = "caption" aligin=center>
          <%= form_for [:admin, @bean] do |f|%>
            <p align=right>Title:<%= f.text_field :title%></p>
            <p align=right>Description:<%= f.text_field :description%></p>
            <p align=right>Price:<%= f.text_field :price%></p>
            <p align=right>Status:<%= f.text_field :status%></p>
            <p align=right>Category: <%= f.collection_select :id, @categories.order(:id),:id,:name, options = {:prompt => "Category"}%></p>
            <p align=right><%= f.file_field :image%></p>
            <h3 align=center><%= f.submit "Add Bean"%></h3></br>
          <% end %> </br>
        </div>
    </div>
  </div>
</div>

