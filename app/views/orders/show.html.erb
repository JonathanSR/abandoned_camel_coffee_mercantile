<h1>Your Most Recent Order</h1>

<table class="table table-striped" id="order-table">
  <tr>
    <th>Item</th>
    <th>Quantity</th>
    <th>Price</th>
  </tr>
    <% @order.order_beans.each do |order_bean| %>
      <tr>
        <td id='item-link'><%= link_to "#{order_bean.item_title}", bean_path(order_bean.bean_id) %></td>
        <td id='item-quantity'><%= order_bean.quantity %></td>
        <td id='item-subtotal'>$<%= order_bean.subtotal %></td>
      </tr>
    <% end %>
</table>
<div id="order_info">
  <p id='order-total'>Total: $<%= @order.total_price %></p>
  <p id='order-status'>Status: <%= @order.status %></p>
  <p id='order-created-date'>Order Sent: <%= @order.date %></p>
  <% if @order.completed_or_cancelled? %>
    <p id='order-updated-date'>Order Updated to <%= @order.status %> at <%= @order.update_time %></p>
  <% end %>
</div>
