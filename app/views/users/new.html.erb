

<div class="container">
  <div class="jumbotron">
    <div class="row">
      <div class ="col-md-7">
        <h2 align=center>Login</h2></br>
          <div class="caption" align=center>
           <%= form_for @user do |f| %>
            <h4 align=center><%= f.label :email %></p>
            <p align=center><%= f.email_field :email %></p>
            <h4 align=center><%= f.label :password %></p>
            <p align=center><%= f.password_field :password %></p>
            <h4 align=center><%= f.label :password_confirmation %></p>
            <p align=center><%= f.password_field :password_confirmation %></p></br>
            <h3 align=center><%= f.submit "Submit New Account" %></h3></br>
          <% end %></br>
          </div></br>
   <p align=center><a class="btn btn-success btn-lg" href="/beans" role="button">Continue as Guest</a></p>

    </div>



