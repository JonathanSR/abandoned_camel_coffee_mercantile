<div class="row">
<% @beans.each do |bean| %>
  <div class="col-sm-4 col-md-3">
    <div class="thumbnail">
      <%= image_tag bean.image.url(:thumb)%>
      <div class="caption">
        <h3><%= link_to bean.title, bean_path(bean) %></h3>
        <p>Description: <%= bean.description %></p>
        <p>Price: <%= bean.price %></p>
        <p>   <%= button_to "Add Item", cart_items_path(bean_id: bean.id),  class: "btn btn_danger"%></p>
      </div>
    </div>
  </div>
  <% end %>
</div>
